@model IssueTracker.ViewModels.TeamViewModel

@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add User to Team</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
                @Html.HiddenFor(model => model.TeamId, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <p class = "control-label col-md-2">Name Surname</p>
            <div class="col-md-10">
                @Html.DropDownListFor(Model => Model.UserId, new SelectList(ViewBag.UsersToAdd, "UserId","UserName"))
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Role</p>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.TeamRoleId, new SelectList(Model.userTeamRoleModelList, "userTeamRoleId", "UserTeamRoleName"))
                @Html.ValidationMessageFor(model => model.TeamRoleId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add User To Team" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
