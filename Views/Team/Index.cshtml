@model IEnumerable<IssueTracker.Models.TeamModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Team Name
        </th>
        <th>
           Team Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTeam", new {TeamId=item.TeamId}) |
            @Html.ActionLink("Details", "Details", new { TeamId = item.TeamId }) |
            @Html.ActionLink("Delete", "DeleteTeam", new { TeamId = item.TeamId })
        </td>
    </tr>
}

</table>
